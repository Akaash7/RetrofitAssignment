<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/sha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author"
        app:layout_constraintBottom_toTopOf="@+id/totalChangesText"
        />

    <TextView
        android:id="@+id/totalChangesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sha"
        android:text="Total Changes: "
        />
    <TextView
        android:id="@+id/totalChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/totalChangesText"
        app:layout_constraintTop_toBottomOf="@id/sha"
        />

    <TextView
        android:id="@+id/filesChangedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/totalChangesText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Files Changes: "
        />
    <TextView
        android:id="@+id/filesChanged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/filesChangedText"
        app:layout_constraintTop_toBottomOf="@+id/totalChanges"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:paddingLeft="2dp"
        app:layout_constraintTop_toBottomOf="@id/filesChangedText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Message"
        />
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/messageText"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>